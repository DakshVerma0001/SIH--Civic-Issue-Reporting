<h2>Admin Dashboard</h2>

<div style="display:flex; gap:20px; flex-wrap:wrap;">
  <% if (typeof issues !== "undefined" && issues.length) { %>
    <% issues.forEach(i => { %>
      <div style="width:250px; border:1px solid #ccc; padding:15px;">
        <h4><%= i.title %></h4>
        <p><%= i.description %></p>
      </div>
    <% }) %>
  <% } else { %>
    <p>No issues found.</p>
  <% } %>
</div>
