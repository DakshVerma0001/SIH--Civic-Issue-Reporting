<!-- views/issue.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Issue Details</title>
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />
  <style>
    body {
      background: linear-gradient(135deg, #4caf50, #2196f3);
      min-height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
      font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
    }
    .issue-card {
      background: #fff;
      color: #333;
      border-radius: 15px;
      box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
      padding: 40px 35px;
      width: 90%;
      max-width: 600px;
      text-align: center;
      position: relative;
    }
    .issue-card h1 {
      font-size: 2rem;
      color: #2196f3;
      margin-bottom: 15px;
    }
    .issue-card p {
      font-size: 1rem;
      margin-bottom: 12px;
    }
    .status-badge {
      display: inline-block;
      padding: 8px 18px;
      border-radius: 25px;
      font-weight: 600;
      color: #fff;
      margin-bottom: 20px;
    }
    .status-pending {
      background: #ff9800;
    }
    .status-approved {
      background: #2196f3;
    }
    .status-resolved {
      background: #4caf50;
    }
    .status-rejected {
      background: #f44336;
    }
    .issue-id {
      font-size: 0.9rem;
      color: #555;
    }
  </style>
</head>
<body>
  <div class="issue-card">
    <h1><%= issue.title %></h1>

    <% 
      let badgeClass = "status-pending";
      if(issue.status === "approved") badgeClass = "status-approved";
      else if(issue.status === "resolved") badgeClass = "status-resolved";
      else if(issue.status === "rejected") badgeClass = "status-rejected";
    %>

    <div class="status-badge <%= badgeClass %>">
      <%= issue.status ? issue.status.toUpperCase() : "PENDING" %>
    </div>

    <p><%= issue.description %></p>

    <div class="issue-id">
      <strong>Issue ID:</strong> <%= issue.customId %>
    </div>
  </div>
</body>
</html>
